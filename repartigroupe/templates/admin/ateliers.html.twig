{# templates/index.html.twig #}
{% extends 'layout.html.twig' %}

{% block contenu %}
<!--MENU ETAPES -->


<h2>{{ ateliers|length }} Atelier(s)</h2>


<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">inscrits</th>
      <th scope="col">action</th>
    </tr>
  </thead>
  <tbody>
	{% for atelier in ateliers %}
	<tr>
		<td>{{ atelier.nom }}</td>
		<td>{{ atelier.nbparticipant }}</td>
		<td>
			<a href="" class="btn btn-small btn-info">
				<i data-feather="edit"></i>
			</a>

			<a href="" class="btn btn-small btn-danger">
				<i data-feather="trash"></i>
			</a>
		</td>
	</tr>
	{% endfor %}


	<tr class="table-dark">
		<td colspan="2"><strong>Ajouter un atelier</strong></td>
		<td><a href="" class="btn btn-small btn-info">
			<i data-feather="plus"></i>
			</a>
		</td>
	</tr>


  </tbody>
</table>	

{% endblock %}

