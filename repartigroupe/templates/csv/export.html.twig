<h4>Fichier à transmettre au secrétariat</h4>
<a href="{{ path('app_resultats_csv_secretariat')}}" class="btn btn-success">Télécharger</a>

<br />

{{ app.request.query.get("retourajoute")|json_encode() }}



<table class="table table-sm table-striped table-hover" style="margin-top:25px">
  <thead>
    <tr>
      <th scope="col">Nom du groupe</th>
      <th scope="col">Nombre d'inscrits</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    
	{% for key, ligne in retour %}
	{% if key%3 == 0 %}
	<tr class="table-success">
	{% elseif key%3 == 1 %}
	<tr class="table-warning">
	{% else %}
	<tr class="table-danger">
	{% endif %}

		<td scope="col">{{ ligne.nom_groupe }}</td>
		<td scope="col">{{ ligne.membres|length }}</td>
		<td scope="col">
			{% if ligne.retire == true %}
			<a href="{{ path( 'app_retire', { 'id': ligne.id_groupe }) }}" class="btn btn-danger">
				<i data-feather="minus"></i>
			</a>
			{% endif %}
			{% if ligne.ajoute == true %}
			<a href="{{ path( 'app_ajoute', { 'id': ligne.id_groupe }) }}" class="btn btn-success">
				<i data-feather="plus"></i>
			</a>
			{% endif %}
		</td>
	</tr>
	{% endfor %}

  </tbody>
</table>