<h4>Fichier à transmettre au secrétariat</h4>
<a href="{{ path('app_resultats_csv_secretariat')}}" class="btn btn-success">Télécharger</a>

<br />
<div class="row">
{% for key, ligne in retour %}

	<div class="col-md-4">
	
		{% if key%3 == 0 %}
		<table class="table table-sm table-striped table-hover" style="margin-top:25px">
		  <thead>
		    <tr>
		      <th scope="col" class="col-md-8">
		      	{% for une_ligne in ligne.nom_atelier|split(':') %}
		      	{{ une_ligne }}<br />
		      	{% endfor %}
		  	  </th>
		      <th scope="col" class="col-md-2">Inscrits</th>
		    </tr>
		  </thead>
		  <tbody>

			{% endif %}
			<tr>
				<td scope="col">{{ ligne.nom_groupe|slice(0, 8) }}</td>
				<td scope="col">
				<!-- Button trigger modal -->
				<button type="button" class="btn btn-info" data-toggle="modal" data-target="#groupe{{ key }}">
				  {{ ligne.membres|length }}
				</button>

				<!-- Modal -->
				<div class="modal fade" id="groupe{{ key }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				  <div class="modal-dialog" role="document">
				    <div class="modal-content">
				      <div class="modal-header">
				        <h5 class="modal-title" id="exampleModalLabel">{{ ligne.nom_groupe }}</h5>
				        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
				          <span aria-hidden="true">&times;</span>
				        </button>
				      </div>
				      <div class="modal-body">
				      	<div class="row">
				        {% for eleve in ligne.membres %}
				      	 <div class="col-md-6">{{ eleve }}</div>
				      	{% endfor %}
				      	</div>
				      </div>
				      <div class="modal-footer">
				        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
				      </div>
				    </div>
				  </div>
				</div>


				</td>

			{% if key%3 == 2 %}
			</tr>	
		    </tbody>
		  </table>
			{% endif %}
	</div>
{% endfor %}